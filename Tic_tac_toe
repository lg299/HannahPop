def display_board(board):
    print(board[7]+'|'+board[8]+'|'+board[9])
    print(board[4]+'|'+board[5]+'|'+board[6])
    print(board[1]+'|'+board[2]+'|'+board[3])


test_board = ['#','X','O','X','O','X','O','X','O','X']
display_board(test_board)

#Asking for user input to assign them with a marker: X or O

def player_choice():

    choice= input(f"Player 1 please choose a marker, X or O: ")
    result = choice.upper()

    while result != 'X' and result != 'O':
        choice_incorrect = input(f"Uh oh, please enter X or O: ")
        print(choice_incorrect)

    else:
        print(f"Great, you have chosen {result}!")

player_choice()

